<div class="row marketing">
  <div class="col-lg-6">
    <% @users.each do |user| %>
      <h3><%= user.name %></h3>
      <p>Badges: <%= user.num_badges %></p>
      <% if user.pokemons.any? %>
        <h4>Pokemons:</h4>
          <ul>
            <% user.pokemons.each do |pokemon| %>
              <li><%= pokemon.name %>: <%= pokemon.level %></li>
              <%= link_to 'Edit', edit_pokemon_path(pokemon) %>
            <% end %>
          </ul>
      <% else %>
        <h4> User has no pokemon! </h4>
      <% end %>
    <% end %>
  </div>
</div>
<div class="footer">
  <p>&copy; Rails Decal 2014</p>
</div>
